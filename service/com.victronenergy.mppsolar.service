[Unit]
Description=MPP Solar D-Bus service for Venus OS
After=dbus.service
Requires=dbus.service

[Service]
Type=simple
ExecStart=/data/apps/dbus-mppsolarv2/dbus-mppsolar.py
Restart=always
RestartSec=10
User=root
Group=root
Environment=PYTHONPATH=/data/apps/dbus-mppsolarv2:/data/apps/dbus-mppsolarv2/mpp-solar

[Install]
WantedBy=multi-user.target